<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <br><br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="listing[title]" required />
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Please enter the data!!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="listing[description]" required class="form-control"></textarea>
        <div class="valid-feedback">Great job!!</div>
        <div class="invalid-feedback">Please enter the data!!</div>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Select image</label>
        <input type="file" id="image" name="listing[image]" class="form-control" required/>
      </div>

      <div class="row">
        <div class="mb-3 col-4 md-4">
          <label for="price" class="form-label">Price:</label>
          <input class="form-control" id="price" name="listing[price]" required />
          <div class="valid-feedback">Looks Good!!</div>
          <div class="invalid-feedback">Please enter the correct datatype!!</div>
        </div>

        <div class="mb-3 col-8 md-8">
          <label for="country" class="form-label">Country:</label>
          <input type="text" class="form-control" id="country" name="listing[country]" required />
          <div class="valid-feedback">Great!!</div>
          <div class="invalid-feedback">Please enter the data!!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" class="form-control" id="location" name="listing[location]" required />
        <div class="valid-feedback">Yaay you just completed the work</div>
        <div class="invalid-feedback">Please enter the data!!</div>
      </div>

      <br><br>
      <button class="btn btn-dark add-btn" type="submit">Add Listing</button>
      <br><br>
    </form>
  </div>
</div>
