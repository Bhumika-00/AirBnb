<% layout('layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-2">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <p>Owned by: <i><%= listing.owner.username %></i></p>
        <br>
        <%= listing.description %><br>
        &#8377;<%= listing.price.toLocaleString('en-IN') %><br>
        <%= listing.location %><br>
        <%= listing.country %><br>
      </p>
    </div>
  </div>
</div>

<br>

<% if(currUser && listing.owner._id.equals(currUser)) { %>
  <div class="row">
    <div class="col-8 offset-2 d-flex gap-2">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark flex-grow-1">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-grow-1">
        <button class="btn btn-danger w-100" type="submit">Delete</button>
      </form>
    </div>
  </div>
<% } %>

<br>

<div class="row">
  <div class="col-8 offset-2">

    <% if(currUser) { %>
      <hr>
      <h4>Leave a Review</h4>
      <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" rows="5" cols="30" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add a comment</div>
        </div>
        <button class="btn btn-dark" type="submit">Submit</button>
        <hr>
      </form>
    <% } %>

    <p><b>All Reviews</b></p>

    <div class="row">
      <% listing.reviews.forEach((review) => { %>
  <div class="col-md-6 mb-3">
    <div class="card shadow-sm border-light rounded">
      <div class="card-body">
        <h5 class="card-title"><%= review.author?.username || 'Anonymous' %></h5>
        <p class="card-text"><%= review.comment %></p>
        <div class="row justify-content-between align-items-center">
          <div class="col-auto">
            <span class="badge bg-primary">Rating: <%= review.rating %> / 5</span>
          </div>
          <div class="col-auto">
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }) %>


    </div>
  </div>
</div>